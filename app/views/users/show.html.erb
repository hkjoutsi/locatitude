<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Phonenumber:</strong>
  <%= @user.phonenumber %>
</p>

<p>
	<strong>Friends:</strong>
  	<% @confirmedRequests.each do |friendship| %>
  	<li><%= link_to friendship.friend, friendship.friend %></li>
  	<% end %><br>
	<strong>Friend requests sent to:</strong>
  	<% @pendingRequests.each do |friendship| %>
  	<li><%= link_to friendship.friend, friendship.friend %></li>
  	<% end %><br>
	<strong>Friend requests to accept from:</strong>
  	<% @requestsToAccept.each do |friendship| %>
  	<li><%= link_to friendship.friend, friendship.friend %></li>
  	<% end %><br>
	<strong>Rejected requests from:</strong>
  	<% @rejectedRequests.each do |friendship| %>
  	<li><%= link_to friendship.friend, friendship.friend %></li>
  	<% end %>

</p>

<p>
	<strong>Locations (<%=  @user.locations.count %>):</strong>
	<table>
	  <thead>
	    <tr>
	      <th>Address</th>
	      <th>Latitude</th>
	      <th>Longitude</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	  <% @user.locations.each do |location| %>
	  	<tr>
	        <td><%= location.address %></td>
	        <td><%= location.latitude %></td>
	        <td><%= location.longitude %></td>
	        <td><%= link_to 'Show', location %></td>
	        <td><%= link_to 'Edit', edit_location_path(location.id) %></td>
	    </tr>
	  <% end %>
	  </tbody>
	</table>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
